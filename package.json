{
  "name": "sobesity",
  "version": "1.0.0",
  "dependencies": {
    "pm2": "^5.2.2"
  },
  "scripts": {
    "install:client": "cd client && npm install",
    "winstart:client": "cd client && npm start",
    "start:client": "pm2 start --cwd client --name client \"npm start\"",
    "stop:client": "pm2 delete client",
    "install:server": "cd server && npm install",
    "winstart:server": "cd server && npm start",
    "start:server": "pm2 start --cwd server --name server \"npm start\"",
    "stop:server": "pm2 delete server",
    "echo":"echo TestNPM",
    "install": "npm run install:client && npm run install:server",
    "start": "npm run start:client && npm run start:server",
    "stop": "npm run stop:client && npm run stop:server",

    "prebuild": "cd server && npm run update_static",
    "build": "docker build --build-arg VERSION=0.1 -t mono-sobesity -f etc/deploy/docker/Dockerfile ."

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vorobeybird/Sobesity-UI.git"
  },
  "author": "Kanstantsin Varabei",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vorobeybird/Sobesity-UI/issues"
  },
  "homepage": "https://github.com/vorobeybird/Sobesity-UI#readme"
}
